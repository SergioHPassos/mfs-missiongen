// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Plane {
  id    String @id @default(cuid())
  name  String
  price Int    @default(0)

  Pilot   Pilot?  @relation(fields: [pilotId], references: [id])
  pilotId String?
}

model Airport {
  id                String   @id @default(cuid())
  ident             String
  type              String
  name              String
  latitude_deg      Float    @default(0.0)
  longitude_deg     Float    @default(0.0)
  elevation_ft      Int      @default(0)
  continent         String
  iso_country       String
  iso_region        String
  municipality      String
  scheduled_service String
  gps_code          String
  iata_code         String
  local_code        String
  keywords          String
  
  Mission           Mission? @relation(fields: [missionId], references: [id])
  missionId         String?
}

model Mission {
  id                String @id @default(cuid())
  departingAirport  String
  arrivingAirport   String
  distance          Int    @default(0)
  objective         String
  type              String
  objectiveQuantity String
  reward            Int    @default(0)

  Pilot   Pilot?  @relation(fields: [pilotId], references: [id])
  pilotId String?

  airports Airport[]
}

model Pilot {
  id             String  @id @default(cuid())
  firstName      String
  lastName       String
  middleName     String?
  age            Int     @default(0)
  money          Int     @default(0)
  totalDistance  Int     @default(0)
  totalCargo     Int     @default(0)
  totalPassenger Int     @default(0)

  missions Mission[]
  planes   Plane[]
}
